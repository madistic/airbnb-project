<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <h1 class="col-6 offset-3">Log In to Wanderlust</h1>
  <div class="col-md-6 offset-md-3">
    <form action="/login" method="POST" class="needs-validation" novalidate>
        <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input id="username" name="username" placeholder="Enter your username" type="text" class="form-control" required />
      </div>
        
        <div class="mb-3">
      <label for="password" class="form-label">Password</label>
        <input id="password" name="password" placeholder="Enter your password" type="password" class="form-control" required />
        </div>
        <button class="btn btn-success">Log In</button>


    </form>
